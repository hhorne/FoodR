<!DOCTYPE html>
<html ng-app>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="/App/css/bootstrap.min.css" rel="stylesheet">
    <link href="/App/css/styles.css" rel="stylesheet">
    <link href="/App/css/schedule.css" rel="stylesheet">
    @RenderSection("styles", required: false)
    
</head>
<body>
    <nav class="navbar navbar-default nav-static-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Munch Easier</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	            <ul class="nav navbar-nav">
                    <li>
                        <a href="/trucks/">Trucks</a>
                    </li>
					<li>
						@Html.ActionLink("Map", "Map", "Home")
					</li>
					<li>
						@if (ViewBag.UserName == "Anonymous")
						{
							@Html.ActionLink("Login", "Login", "Auth")
						}
						else
						{
							
							using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
								@Html.AntiForgeryToken()
								@ViewBag.UserName
								<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
							}
						}
					</li>
                    <li>
                        <a href="/admin/">Admin</a>
                    </li>
				</ul>



            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        @RenderBody()
    </div> <!-- /container -->
    <div class="footer">
        <div class="container">
            <p class="text-muted">&copy; FoodR 2014</p>
        </div>
    </div>

        <script src="/Scripts/jquery-2.1.0.min.js"></script>
		<script src="/Scripts/jquery.validate.js"></script>
		<script src="/Scripts/jquery.validate.unobtrusive.js"></script>
        @*<script src="/Scripts/angular.js"></script>
        <script src="/Scripts/angular-route.js"></script>*@
        <script src="/Scripts/bootstrap.min.js"></script>
        <script src="/Scripts/modal.js"></script>
        <script src="/Scripts/button.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>