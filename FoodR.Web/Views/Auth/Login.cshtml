@using Microsoft.Owin.Security
@model LoginViewModel
@{
    ViewBag.Title = "FoodR - Login";
}

<h2>Login</h2>

@using (Html.BeginForm("ExternalLogin", "Auth", new { ReturnUrl = Model.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <div id="socialLoginList">
        <p>
            @foreach (AuthenticationDescription p in Model.LoginProviders)
            {
                <button type="submit" class="btn btn-primary btn-google" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">
                    <i class="fa fa-google-plus fa-lg"></i>
                    @p.AuthenticationType
                </button>
            }
            <button type="submit" class="btn btn-primary btn-facebook"><i class="fa fa-facebook fa-lg"></i> Facebook</button>
            <button type="submit" class="btn btn-primary btn-twitter"><i class="fa fa-twitter fa-lg"></i> Twitter</button>
        </p>
    </div>
}

@using (Html.BeginForm("Login", "Auth", new { }, FormMethod.Post, new { @class = "form-signin" }))
{
    <h2 class="form-signin-heading">Please sign in</h2>
    <input type="email" class="form-control" placeholder="Email address" required autofocus />
    <input type="password" class="form-control" placeholder="Password" required />
    <label class="checkbox">
        <input type="checkbox" value="remember-me"> Remember me
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <button class="btn btn-lg btn-default btn-block" type="submit">Register</button>
    <a href="">Forgot password?</a>
}