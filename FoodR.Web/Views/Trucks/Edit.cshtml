@model TruckEditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8">
    @if (Model.PageState == TruckDetailsPageState.SaveSuccessfully)
    {
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Changes saved
        </div>
    }
    else if (Model.PageState == TruckDetailsPageState.SaveFailed)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Oops!</strong> The hamster fell of the wheel and was not able to save your changes. Please try again later.
        </div>
    }
    <h2>Edit Truck</h2>
</div>
<div class="col-md-8">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.EditorFor(model => model)

        <div>
            <button type="submit" class="btn btn-success btn-lg center-block">Save</button>
        </div>
    }
</div>